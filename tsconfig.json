{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",                                
    "moduleResolution": "NodeNext",  
    "lib": ["ES2022"],                
    "typeRoots": ["./node_modules/@types", "./src/types"],   
    "resolveJsonModule": true,                    
    "outDir": "./dist",  
    "rootDir": "./src",
    "incremental": true,      
    "strict": true,                               
    "alwaysStrict": true,
    "removeComments": true,
    "esModuleInterop": true,      
    "noEmit": true,
    "allowImportingTsExtensions": true,              
    "forceConsistentCasingInFileNames": true,            
    "paths": {
      "@/entities/*": ["./src/entities/*"],
      "@/useCases/*": ["./src/useCases/*"],
      "@/adapters/*": ["./src/adapters/*"],
      "@/controllers/*": ["./src/controllers/*"],
      "@/errors/*": ["./src/errors/*"],
      "@/configs/*": ["./src/configs/*"],
      "@/lib/*": ["./src/lib/*"]
    },                             
    "skipLibCheck": true                          
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts" // Ignora arquivos com extens√£o .spec.ts
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "esm": true,
  }
}
