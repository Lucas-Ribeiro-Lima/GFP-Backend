model Registro {
  uuid String @id @db.VarChar(36)
  idCarteira Int
  tipo Tipo
  categoria Categoria
  modalidade Modalidade @default(fixo)
  valor Float
  descricao String
  fonte String?
  frequencia Frequencia @default(mensal)
  parcelado Boolean?
  numParcelas Int?
  competenciaMes Int
  competenciaAno Int
  dataInclusao DateTime

  //ORM Relation
  carteira Carteira @relation(fields: [idCarteira], references: [id])
}

enum Tipo { 
  renda
  despesa
}

enum Categoria {
  salario
  investimento
  bonus
  moradia
  lazer
  outros
}

enum Modalidade {
  fixo
  variavel
}

enum Frequencia {
  mensal
  trimestral
  semestral
  anual
}
